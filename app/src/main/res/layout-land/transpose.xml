<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_radius_text"
    >
    <TextView
        android:id="@+id/songTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ek ladkhi ko dekha - Mukhda 1"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/closeBtn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/close"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/songTitle"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/subTitleLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Tempo"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songTitle" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Increase or decrease the speed of the song"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTitleLanguage"
        tools:ignore="TextContrastCheck" />

    <View
        android:id="@+id/view1"
        android:layout_width="500dp"
        android:layout_height="210dp"
        android:background="@drawable/radius_curve"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textview1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/songRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:text="Song Range"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview1" />

    <TextView
        android:id="@+id/cSharpNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="C#4"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/songRange"
        app:layout_constraintTop_toTopOf="@+id/view1"
         />

    <TextView
        android:id="@+id/cnote5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:text="C5"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/songRange"
        app:layout_constraintTop_toBottomOf="@+id/cSharpNote" />

    <View
        android:id="@+id/blackCircle1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/black_circle"
        app:layout_constraintStart_toEndOf="@+id/cSharpNote"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <View
        android:id="@+id/blackLineView"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="29dp"
        android:background="@color/black"
        app:layout_constraintStart_toEndOf="@+id/songRange"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <View
        android:id="@+id/blackCircle2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/black_circle"
        app:layout_constraintStart_toEndOf="@+id/cnote5"
        app:layout_constraintTop_toBottomOf="@+id/blackCircle1" />

    <View
        android:id="@+id/greenCircle1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/green_circle"
        app:layout_constraintStart_toEndOf="@+id/blackCircle1"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <View
        android:id="@+id/view7"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="29dp"
        android:background="#3C966D"
        app:layout_constraintStart_toEndOf="@+id/blackLineView"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <View
        android:id="@+id/greenCircle2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/green_circle"
        app:layout_constraintStart_toEndOf="@+id/blackCircle2"
        app:layout_constraintTop_toBottomOf="@+id/greenCircle1" />

    <TextView
        android:id="@+id/Gnote3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="G3"
        android:textColor="#3C966D"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/greenCircle1"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <TextView
        android:id="@+id/Gnote5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="G5"
        android:textColor="#3C966D"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/greenCircle2"
        app:layout_constraintTop_toBottomOf="@+id/Gnote3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:text="Your Range"
        android:textColor="#3C966D"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/Gnote3"
        app:layout_constraintTop_toBottomOf="@+id/textview1" />

    <TextView
        android:id="@+id/changePitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="65dp"
        android:text="Change Pitch"
        android:textColor="@color/text_color"
        android:textFontWeight="600"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songRange" />

    <View
        android:id="@+id/view2"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/circle_design_pitch_change"
        app:layout_constraintStart_toEndOf="@+id/changePitch"
        app:layout_constraintTop_toBottomOf="@+id/Gnote5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/minusBtn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/minus"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp"
        android:text="0"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/minusBtn"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="30dp"
        android:text="DB Major"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/minusBtn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plusBtn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/plus"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/autoTranspose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:drawableLeft="@drawable/refresh_ccw"
        android:drawablePadding="5dp"
        android:text="Auto Transpose"
        android:textColor="#FF03090D"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        tools:ignore="TextSizeCheck" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        android:text="Set key for this song"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="5dp"
        android:text="Reset to default key"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkBox1"
        app:layout_constraintTop_toBottomOf="@+id/view1" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
